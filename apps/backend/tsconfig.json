{
  "compilerOptions": {
    // Target y módulos
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Directorios
    "rootDir": "./src",
    "outDir": "./dist",

    // Generación de tipos
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Comprobaciones estrictas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Compatibilidad con módulos aislados
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,

    // Otras opciones
    "skipLibCheck": true
  },
  "include": ["src"]
}
